<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#000000"
    tools:context="com.example.aldrinmcadelia.myapplication.FinishActivity">

    <TextView android:layout_width="wrap_content"
        android:id="@+id/newText"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"

        android:textStyle="bold"
        android:textSize="32dp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="97dp" />

    <TextView android:layout_width="wrap_content"
        android:id="@+id/newText2"
        android:layout_height="wrap_content"

        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/newText"
        android:layout_alignLeft="@+id/newText3"
        android:layout_alignStart="@+id/newText3" />

    <TextView android:layout_width="wrap_content"
        android:id="@+id/newText3"
        android:layout_height="wrap_content"

        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/newText2"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text=">>>>"
        android:textSize="30sp"
        android:textColor="#FFFFFF"
        android:id="@+id/next"
        android:layout_gravity="right"
        android:layout_column="31"
        android:background="@drawable/selectcolor"
        android:layout_below="@+id/newText3"
        android:layout_alignRight="@+id/newText"
        android:layout_alignEnd="@+id/newText" />

</RelativeLayout>
