<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#000000"
    android:weightSum="1"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About"
        android:textStyle="bold"
        android:textSize="50dp"
        android:textColor="#FFFFFF"
        android:id="@+id/aboutText"/>


    <TextView
        android:layout_width="280dp"
        android:layout_height="180dp"
        android:padding="10dp"
        android:text="A maze game that lets the ball find its way out from the maze! Just move the device sidewards, upward and downward! Enjoy!"
        android:textStyle="normal"
        android:textSize="30dp"
        android:textColor="#F2F2F2"
        android:id="@+id/aboutText2"
        android:background="@drawable/borderline"
        android:layout_weight="0.17" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textColor="#FFFFFF"
        android:id="@+id/back_main"
        android:layout_gravity="right"
        android:layout_column="31"
        android:onClick="backPage"
        android:background="@drawable/blue"
        />

</LinearLayout>