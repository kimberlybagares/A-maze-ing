<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#000000"
    tools:context="com.example.aldrinmcadelia.myapplication.GameOver">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time is up!"
        android:textStyle="bold"
        android:textSize="50dp"
        android:textColor="#FFFFFF"
        android:id="@+id/aboutText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="102dp" />



    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Restart?"
        android:textColor="#FFFFFF"
        android:id="@+id/Restart"
        android:layout_gravity="right"
        android:layout_column="31"
        android:background="@drawable/selectcolor"
        android:layout_below="@+id/aboutText"
        android:layout_alignLeft="@+id/Quit"
        android:layout_alignStart="@+id/Quit" />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Quit"
        android:textColor="#FFFFFF"
        android:id="@+id/Quit"
        android:layout_gravity="right"
        android:layout_column="25"
        android:background="@drawable/selectcolor"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/Restart"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
